@{
    ViewData["Title"] = "Home Page";
}

<app asp-ng2-prerender-module="ClientApp/dist/main-server">
<style>
    .preloader {
        position: absolute;
        width: 100vw;
        height: 100vh;
        color: #b71c1c;
        background-color: #fff;
    }

    .loading {

        height: 0;
        width: 0;
    }

        .loading::after {
            content: "";
            background: transparent;
            width: 130px;
            height: 130px;
            position: absolute;
            left: 50%;
            top: 50%;
            margin: -65px 0 0 -65px;
            border-radius: 50%;
            box-shadow: #b71c1c -4px -5px 3px -3px;
            animation: loading 2s infinite linear;
        }

    .load {
        font-family: Century Gothic, arial, sans-serif;
        font-weight: 300;
        left: 50%;
        top: 50%;
        transform: translateX(-50%) translateY(-50%);
        margin: 0 auto;
        position: absolute;
        display: block;
        font-size: 18px;
        animation: text 2s infinite ease-in-out;
    }
</style>
<div class="preloader">
    <div class="loading">
        <span class="load">CAMCOST</span>
    </div>
</div>
</app>

<script src="~/dist/vendor.js" asp-append-version="true"></script>
@section scripts {
    <script src="https://storage.googleapis.com/code.getmdl.io/1.0.4/material.min.js"></script>
    <script src="~/dist/main-client.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.18.2/TweenMax.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

    <script src="https://unpkg.com/slick-carousel@1.6.0/slick/slick.js"></script>

    <script>

        function searchToggle(obj, evt) {
            var container = $(obj).closest('.search-wrapper');
            if (!container.hasClass('active')) {
                container.addClass('active');
                evt.preventDefault();
            }
            else if (container.hasClass('active') && $(obj).closest('.input-holder').length == 0) {
                container.removeClass('active');
                // clear input
                container.find('.search-input').val('');
            }
        }

    </script>
}
